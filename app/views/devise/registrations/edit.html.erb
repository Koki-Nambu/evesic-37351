<%= render "shared/header" %>
<body>
<%= form_with model: @user, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        Edit
      </h1>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム(必須)</label>
      </div>
      <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"ニックネーム", maxlength:"40", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">アーティスト名(必須)</label>
      </div>
      <%= f.text_area :artist_name, class:"input-default", placeholder:"アーティスト名" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">Email(必須)</label>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">Password(必須)</label>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"半角英数(6文字以上)" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">Password(確認)</label>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">YouTube URL(任意)</label>
      </div>
      <%= f.text_area :url, class:"input-default", id:"url", placeholder:"YouTube URL" %>
    </div>
    
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ジャンル(任意)</label>
      </div>
      <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"input-default3"}) %>
    </div>
    <div class="form-group2">
      <div class='form-text-wrap'>
        <label class="form-text">Profile(任意)</label>
      </div>
      <%= f.text_area :profile, class:"input-default2", id:"nickname", placeholder:"プロフィール", maxlength:"800" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">アーティスト写真(任意)</label>
        <div class="click-upload">
          <%= f.file_field :image, id:"item-image" %>
        </div>
      </div>
    </div>
    
    <div class='user_edit_botn'>
      <%= f.submit "変更する" ,class:"user_update_botn" %>
      <%=link_to 'もどる', "/users/#{current_user.id}", class:"mypage_back_btn" %>
    </div>
  </div>
<% end %>
</body>
<%= render "shared/footer"%>
